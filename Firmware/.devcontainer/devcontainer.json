// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
	"name": "PIO",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	// "image": "mcr.microsoft.com/devcontainers/python:1-3.12-bullseye",
	"build": {
		"dockerfile": "Containerfile",
		"context": ".",
		"args": {
			"FEDORA_COMPAT": "0", // enables Fedora compatibility mode (extra dialout group with gid 27)
			"VARIANT": "ubuntu-22.04"
		}
	},
	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	"forwardPorts": [
		8008
	],
	"mounts": [
		"source=/dev/,target=/dev/,type=bind,consistency=consistent"
	],
	"runArgs": [
		"--privileged",
		"--userns=keep-id"
	],
	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "pip3 install --user -r requirements.txt",
	// "postAttachCommand": "sudo service udev restart",
	// Configure tool-specific properties.
	"customizations": {
		"vscode": {
			"settings": {
				"terminal.integrated.defaultProfile.linux": "zsh",
				"terminal.integrated.shell.linux": "/usr/bin/zsh",
				"platformio-ide.pioHomeServerHttpPort": 8008,
				"platformio-ide.disablePIOHomeStartup": true
			},
			"extensions": [
				"ms-vscode.cpptools",
				"ms-vscode.cpptools-extension-pack",
				"platformio.platformio-ide",
				"vscode-arduino.vscode-arduino-community",
				"cschlosser.doxdocgen",
				"eamodio.gitlens",
				"EditorConfig.EditorConfig"
			]
		}
	}
	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	//"remoteUser": "vscode",
	//"containerUser": "vscode"
}